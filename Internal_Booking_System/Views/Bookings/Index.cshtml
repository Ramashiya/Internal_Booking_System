@model IEnumerable<InternalBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "Bookings List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Booking</a>
    <a asp-controller="Resources" asp-action="Index" class="btn btn-secondary ms-2">View Resources</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.EndTime)</th>
            <th>@Html.DisplayNameFor(model => model.BookedBy)</th>
            <th>@Html.DisplayNameFor(model => model.Purpose)</th>
            <th>Resource</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.StartTime.ToString("g")</td>  @* "g" is general date/time pattern *@
                    <td>@item.EndTime.ToString("g")</td>
                    <td>@item.BookedBy</td>
                    <td>@item.Purpose</td>
                    <td>@item.Resource?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No bookings found.</td>
            </tr>
        }
    </tbody>
</table>
